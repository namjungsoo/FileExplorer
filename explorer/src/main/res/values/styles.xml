<resources>

    <style name="ExplorerButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">9sp</item>
    </style>

    <!--
    Base application theme.
    액션바가 존재함 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--
    탐색기 테마
    ActionBar를 직접 만들어서 사용함
    -->
    <style name="ExplorerTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="ExplorerTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- 코믹뷰어 테마
    ActionBar를 오버레이 함
    -->
    <style name="ComicViewerTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="ComicSpinnerStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>
</resources>
