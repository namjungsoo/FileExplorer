<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duongame.comicz.pro">

    <application
        android:icon="@drawable/comicz"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.duongame.viewer.activity.PhotoActivity"
            android:theme="@style/ComicViewerTheme"
            />
        <activity android:name="com.duongame.viewer.activity.ZipActivity"
            android:theme="@style/ComicViewerTheme"
            />
        <activity android:name="com.duongame.viewer.activity.TextActivity"
            android:theme="@style/ComicViewerTheme"
            />
        <activity android:name="com.duongame.viewer.activity.PdfActivity"
            android:theme="@style/ComicViewerTheme"
            />

    </application>

    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <!-- admob -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- shortcut -->
    <uses-permission android:name="com.android.launcher.permission.INSTALL_SHORTCUT" />

</manifest>